# 集群部署节点：一般为运行ansible 脚本的节点
# 变量 NTP_ENABLED (=yes/no) 设置集群是否安装 chrony 时间同步
[deploy]
172.16.12.37 NTP_ENABLED=yes

# etcd集群请提供如下NODE_NAME，注意etcd集群必须是1,3,5,7...奇数个节点
[etcd]
172.16.12.79 NODE_NAME=etcd1
172.16.12.78 NODE_NAME=etcd2
172.16.12.37 NODE_NAME=etcd3

[new-etcd] # 预留组，后续添加etcd节点使用
#192.168.1.x NODE_NAME=etcdx

[kube-master]
172.16.12.79
172.16.12.78

[new-master] # 预留组，后续添加master节点使用
#192.168.1.5

[kube-node]
172.16.12.79
172.16.12.78
172.16.12.37

[new-node] # 预留组，后续添加node节点使用
#192.168.1.xx

# 参数 NEW_INSTALL：yes表示新建，no表示使用已有harbor服务器
# 如果不使用域名，可以设置 HARBOR_DOMAIN=""
[harbor]
HARBOR_IP="172.16.12.37"
HARBOR_USER="admin"
HARBOR_PWD="MzxWS!1976;"
KUBEIMAGE_BASE_DIR=kube-base
172.16.12.37 HARBOR_DOMAIN="harbor.cicdi.com" NEW_INSTALL=no

# 负载均衡(目前已支持多于2节点，一般2节点就够了) 安装 haproxy+keepalived
[lb]
172.16.12.79 LB_ROLE=backup
172.16.12.78 LB_ROLE=backup

#【可选】外部负载均衡，用于自有环境负载转发 NodePort 暴露的服务等
[ex-lb]
#192.168.1.6 LB_ROLE=backup EX_VIP=192.168.1.250
#192.168.1.7 LB_ROLE=master EX_VIP=192.168.1.250

[all:vars]
# ---------集群主要参数---------------
#集群部署模式：allinone, single-master, multi-master
DEPLOY_MODE=multi-master

#集群主版本号，目前支持: v1.8, v1.9, v1.10，v1.11, v1.12, v1.13
K8S_VER="v1.13"

# 集群 MASTER IP即 LB节点VIP地址，为区别与默认apiserver端口，设置VIP监听的服务端口8443
# 公有云上请使用云负载均衡内网地址和监听端口
MASTER_IP="172.16.12.80"
KUBE_APISERVER="https://{{ MASTER_IP }}:8443"

# 集群网络插件，目前支持calico, flannel, kube-router, cilium
CLUSTER_NETWORK="calico"

# 服务网段 (Service CIDR），注意不要与内网已有网段冲突
SERVICE_CIDR="20.19.0.0/16"

# POD 网段 (Cluster CIDR），注意不要与内网已有网段冲突
CLUSTER_CIDR="20.09.0.0/16"

# 服务端口范围 (NodePort Range)
NODE_PORT_RANGE="20000-50000"

# kubernetes 服务 IP (预分配，一般是 SERVICE_CIDR 中第一个IP)
CLUSTER_KUBERNETES_SVC_IP="20.19.0.1"

# 集群 DNS 服务 IP (从 SERVICE_CIDR 中预分配)
CLUSTER_DNS_SVC_IP="20.19.0.2"

# 集群 DNS 域名
CLUSTER_DNS_DOMAIN="testcluster.cicdi."

# 集群basic auth 使用的用户名和密码
BASIC_AUTH_USER="admin"
BASIC_AUTH_PASS="Cicdi9102"
#BASIC_AUTH_PASS="Cicdi9102"

# ---------附加参数--------------------
#默认二进制文件目录
bin_dir="/opt/kube/bin"

#证书目录
ca_dir="/etc/kubernetes/ssl"

#部署目录，即 ansible 工作目录，建议不要修改
base_dir="/etc/ansible"
#基础镜像名称及版本号
calico_node_name="calico-node"
calico_node_version="v3.4.1"
calico_node_imageid="276e3cf560cd"

calico_cni_name="calico-cni"
calico_cni__version="v3.4.1"
calico_cni_imageid="1fc3bbad9f9f"

calico_kube_controllers_name="calico-kube-controllers"
calico_kube_controllers_version="v3.4.1"
calico_kube_controllers_imageid="6a36c1b5d650"

coredns_name="coredns"
coredns_version="1.2.6"
coredns_imageid="f59dcacceff4"

metrics_server_version="metrics-server-amd64"
metrics_server_name="v0.3.1"
metrics_server_imageid="61a0c90da56e"

heapster_name="heapster-amd64"
heapster_version="v1.5.4"
heapster_imageid="72d68eecf40c"

heapster_influxdb_name="heapster-influxdb-amd64"
heapster_influxdb_version="v1.3.3"
heapster_influxdb_imageid="577260d221db"

heapster_grafana_name="heapster-grafana-amd64"
